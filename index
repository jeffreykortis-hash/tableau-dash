<script>
// Pipeline by Stage
const pCtx = document.getElementById('pipelineChart').getContext('2d');
new Chart(pCtx, {
  type: 'bar',
  data: {
    labels: ['Prospecting', 'Discovery', 'Demo', 'Proposal', 'Negotiation', 'Closed Won'],
    datasets: [{
      label: 'Pipeline Value ($K)',
      data: [2800, 3200, 2600, 2100, 1900, 3800],
      backgroundColor: ['#6B9BD2','#6B9BD2','#6B9BD2','#6B9BD2','#6B9BD2','#2B5BA8'],
      borderWidth: 0,
      borderRadius: 2,
    }]
  },
  options: {
    responsive: true,
    plugins: {
      legend: { display: false },
      tooltip: {
        callbacks: {
          label: ctx => `$${ctx.raw.toLocaleString()}K`
        }
      }
    },
    scales: {
      y: {
        grid: { color: '#F0F2F5' },
        ticks: {
          font: { size: 10, family: 'Inter' },
          callback: v => `$${v/1000}M`
        }
      },
      x: {
        grid: { display: false },
        ticks: { font: { size: 10, family: 'Inter' } }
      }
    }
  }
});

// Win/Loss by Region
const wCtx = document.getElementById('winLossChart').getContext('2d');
new Chart(wCtx, {
  type: 'doughnut',
  data: {
    labels: ['West Won', 'East Won', 'Central Won', 'West Lost', 'East Lost', 'Central Lost'],
    datasets: [{
      data: [22, 18, 14, 12, 16, 18],
      backgroundColor: ['#2B5BA8','#4A7EC7','#7AAEE0','#EF5350','#EF8A87','#F5B9B7'],
      borderWidth: 2,
      borderColor: 'white',
    }]
  },
  options: {
    responsive: true,
    cutout: '55%',
    plugins: {
      legend: {
        position: 'right',
        labels: { font: { size: 10, family: 'Inter' }, boxWidth: 12, padding: 8 }
      }
    }
  }
});

// Deal Size Over Time
const dCtx = document.getElementById('dealSizeChart').getContext('2d');
new Chart(dCtx, {
  type: 'line',
  data: {
    labels: ['Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec','Jan','Feb','Mar'],
    datasets: [{
      label: 'Avg Deal Size',
      data: [38000, 41000, 39500, 43000, 44500, 42000, 46000, 44000, 47500, 46000, 48000, 48500],
      borderColor: '#2B5BA8',
      backgroundColor: 'rgba(43,91,168,0.08)',
      borderWidth: 2,
      pointRadius: 3,
      pointBackgroundColor: '#2B5BA8',
      fill: true,
      tension: 0.35,
    },{
      label: 'Target',
      data: [45000,45000,45000,45000,45000,45000,45000,45000,45000,45000,45000,45000],
      borderColor: '#E65100',
      borderWidth: 1.5,
      borderDash: [5,4],
      pointRadius: 0,
      fill: false,
    }]
  },
  options: {
    responsive: true,
    plugins: {
      legend: { labels: { font: { size: 10, family: 'Inter' }, boxWidth: 12 } },
      tooltip: {
        callbacks: { label: ctx => `$${(ctx.raw/1000).toFixed(0)}K` }
      }
    },
    scales: {
      y: {
        grid: { color: '#F0F2F5' },
        ticks: { font: { size: 10 }, callback: v => `$${v/1000}K` }
      },
      x: { grid: { display: false }, ticks: { font: { size: 10 } } }
    }
  }
});

